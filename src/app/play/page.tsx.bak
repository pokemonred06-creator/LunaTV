  ): Promise<SearchResult> => {
    if (sources.length === 1) return sources[0];

    // å¹¶å‘æ± é™åˆ¶ï¼šæœ€å¤šåŒæ—¶æµ‹è¯•12ä¸ªæºï¼Œå¤§å¹…æå‡å¹¶å‘åº¦ä»¥æ¥è¿‘åŸå§‹é€Ÿåº¦ï¼ŒåŒæ—¶ä¿ç•™ä¸Šé™é˜²æ­¢å´©æºƒ
    const MAX_CONCURRENT = 12;

