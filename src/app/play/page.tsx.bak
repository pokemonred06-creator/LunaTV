    (art as any)._logDebug?.('Rotation toggle', {
      fromLevel: currentLevel,
      toLevel: targetLevel,
      action: targetLevel === 1 ? 'entering landscape fullscreen' : 'exiting to normal mode',
    });

    if (currentLevel === 0) {
      // Level 0 -> Level 1: Player-level fullscreen (CSS rotation)
      enterPlayerLevelFullscreen();
      setFullscreenLevel(1);
    } else {
      // Level 1 or 2 -> Level 0: Exit all fullscreen
