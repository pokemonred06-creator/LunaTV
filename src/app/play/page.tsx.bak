  // Enter player-level fullscreen (CSS-based rotation to landscape)
const enterPlayerLevelFullscreen = () => {
  const container = artRef.current;
  if (!container) return;

  console.log('[Fullscreen] Entering Player Level Fullscreen Mode');
  const player = artPlayerRef.current;

  // Get viewport dimensions
  const vw = window.innerWidth;
  const vh = window.innerHeight;
  
  // LOGIC: If viewport is portrait (Tall), we MUST rotate.
  // If viewport is landscape (Wide), we just fill screen.
  const isPortrait = vh > vw;

  // Add class for styling
  container.classList.add('player-level-fullscreen');
  document.body.classList.add('player-fullscreen-active');

  // FORCE FULLSCREEN STYLES (The Hammer)
  // We apply these inline to override anything Artplayer does.
  const s = container.style;
  s.position = 'fixed';
  s.top = '0';
  s.left = '0';
  s.zIndex = '100000'; // Highest priority
  s.background = 'black';
  s.margin = '0';
  s.padding = '0';
  
  // Force inner wrapper
  const inner = container.querySelector('.art-video-player') as HTMLElement;
  if (inner) {
      inner.style.width = '100%';
      inner.style.height = '100%';
  }
  
  if (isPortrait) {
    // ROTATION MODE (Mobile Portrait -> Landscape)
    // We center the container, then rotate it 90deg, then size it to match the swapped viewport.
    console.log('[Fullscreen] Portrait Detected - Rotating');
    s.width = `${vh}px`;
    s.height = `${vw}px`;
    s.top = '50%';
    s.left = '50%';
    s.transform = 'translate(-50%, -50%) rotate(90deg)';
    s.transformOrigin = 'center center';
  } else {
    // STANDARD FULLSCREEN MODE (Desktop/Landscape Mobile)
    // Just cover everything.
    console.log('[Fullscreen] Landscape Detected - Maximizing');
    s.width = '100vw';
    s.height = '100vh';
    s.top = '0';
    s.left = '0';
    s.transform = 'translate(0, 0) rotate(0deg)'; // Explicitly reset
    s.transformOrigin = 'center center';
  }

  // Force-fix for Black Screen:
  // 1. Hide ALL Canvases (CAS, Danmaku, Subs) to ensure no obstruction
  const canvases = container.querySelectorAll('canvas');
  canvases.forEach((c) => {
      (c as HTMLElement).style.display = 'none';
  });
  
  // 2. Force Video visibility (override CAS opacity: 0)
  const video = container.querySelector('video');
  if (video) {
      video.style.opacity = '1';
  }

  // Prevent body scroll
  document.body.style.overflow = 'hidden';

  // 3. Trigger resize to ensure Artplayer updates its internal state
  artPlayerRef.current?.resize();

  // Force controls visible and prevent cursor-hide class from sticking in rotated mode
  player?.template?.$player?.classList.remove('art-hide-cursor');
  if (player?.controls) {
    player.controls.show = true;
  }
};

const exitPlayerLevelFullscreenCSS = () => {
